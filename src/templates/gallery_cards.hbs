<li class="photo-card-item">
    <div class="photo-card">        
        <img src="{{webformatURL}}" alt="{{tags}}" height="200px" />
        <div class="stats">
            <p class="stats-item">
                <i class="material-icons">thumb_up_off_alt </i>
                {{likes}}
            </p>
            <p class="stats-item">
                <i class="material-icons">face </i>
                {{views}}
            </p>
            <p class="stats-item">
                <i class="material-icons">comment </i>
                {{comments}}
            </p>
            <p class="stats-item">
                <i class="material-icons">cloud_download </i>
                {{downloads}}
            </p>
        </div>
    </div>
</li>